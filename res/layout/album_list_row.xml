<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/list_item_padding" >

    <TextView
        android:id="@+id/album_list_row_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="@dimen/list_primary_text_size"
        android:textColor="@android:color/primary_text_light"/>
 
    <TextView
        android:id="@+id/album_list_row_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/album_list_row_title"
        android:layout_marginTop="@dimen/list_internal_margin"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="@dimen/list_secondary_text_size"
        android:textColor="@android:color/darker_gray" />

</RelativeLayout>
