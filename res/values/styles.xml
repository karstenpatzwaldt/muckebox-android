<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light">
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="FullSize">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item> 
    </style>
    
    <style name="FullWidth">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="ListItem">
        <item name="android:layout_width">match_parent</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:orientation">horizontal</item>
    	<item name="android:padding">@dimen/list_item_padding</item>
    	<item name="android:background">@android:color/background_light</item>
    </style>
    
    <style name="DividedListItem" parent="ListItem">
        <item name="android:divider">@android:drawable/divider_horizontal_bright</item>
		<item name="android:dividerPadding">4dip</item>
		<item name="android:dividerHeight">2dip</item>
		<item name="android:showDividers">middle</item>
    </style>
    
    <style name="ClickableListItem" parent="ListItem">
        <item name="android:clickable">true</item>
    </style>
    
    <style name="ListItemText" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item> 
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>  
    </style>
    
    <style name="ListItemPrimaryText" parent="@style/ListItemText">
        <item name="android:textSize">@dimen/list_primary_text_size</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>
    
    <style name="ListItemSecondaryText" parent="@style/ListItemText">
        <item name="android:textSize">@dimen/list_secondary_text_size</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:layout_marginTop">1dip</item>
    </style>
    
    <style name="ListItemPlaytime" parent="@style/ListItemText">
        <item name="android:gravity">right</item>
        <item name="android:textSize">@dimen/list_primary_text_size</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>
    
    <style name="ListItemStatusIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">right</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingLeft">@dimen/list_item_padding</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="TitleStrip">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:background">#33b5e5</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="TextTitleStrip" parent="@style/TitleStrip">
        <item name="android:gravity">center</item>
    </style>
    
    <style name="LinearVerticalFullsize" parent="@style/FullSize">
    	<item name="android:orientation">vertical</item>
    </style>
    
    <style name="ListFullsize" parent="@style/FullSize">
    	<item name="android:paddingLeft">@dimen/list_horizontal_margin</item>
    	<item name="android:paddingRight">@dimen/list_horizontal_margin</item>
    	<item name="android:background">@android:color/background_light</item>
    </style>
    
    <style name="ButtonList">
	    <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:divider">@android:drawable/divider_horizontal_bright</item>
		<item name="android:dividerPadding">4dip</item>
		<item name="android:showDividers">middle</item>
		<item name="android:background">@android:color/background_light</item>
    </style>
    
    <style name="TransparentButtonList" parent="ButtonList">
        <item name="android:background">@android:color/transparent</item>
    </style>
    
    <style name="ClosedButtonList" parent="@style/ButtonList">
        <item name="android:showDividers">middle|end|beginning</item>
    </style>
    
    <style name="TrackListButton">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/blue_transparent</item>
        <item name="android:focusable">false</item>
    </style>
    
    <style name="TrackListButtonSeparator">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0</item>
        <item name="android:background">@drawable/divider_vertical_holo_light</item>
    </style>
</resources>
