<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.muckebox.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="org.muckebox.android.Muckebox"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="org.muckebox.android.ui.activity.BrowseActivity"
            android:label="@string/app_name"
            android:configChanges="orientation" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="org.muckebox.android.ui.activity.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>

        <provider
            android:name="org.muckebox.android.db.MuckeboxProvider"
            android:authorities="org.muckebox.android.provider"
            android:enabled="true"
            android:exported="false" >
        </provider>
        
        <service
            android:name="org.muckebox.android.services.PlayerService"
            android:icon="@drawable/av_play">
            
        </service>

    </application>

</manifest>
